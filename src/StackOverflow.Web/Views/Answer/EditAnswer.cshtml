@model UpdateAnswerModel

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simplemde@1.11.2/dist/simplemde.min.css">
}
<div class="content-header">
    <div class="container">
        <div class="row justify-content-between mb-2">
            <div class="">
                <h3>New Questions</h3>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="EditAnswer" asp-controller="Answer" asp-antiforgery="true" method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="AnswerId" />
                                <input type="hidden" asp-for="PostId" />
                                <label asp-for="AnswerContent" class="control-label"></label>
                                <textarea id="markdownEditor" asp-for="AnswerContent" class="form-control"></textarea>
                                <span asp-validation-for="AnswerContent" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary" id="saveButton">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simplemde@1.11.2/dist/simplemde.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked@3.0.2/marked.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.3/jquery.validate.min.js"></script>
    <script>
        var simplemde = new SimpleMDE({ element: document.getElementById("markdownEditor") });
    </script>
    <partial name="_ValidationScriptsPartial" />
}